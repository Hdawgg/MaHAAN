{
  "builds": [
    {
      "src": "**/*.html",
      "use": "@vercel/static-build",
      "config": { "distDir": "./" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=3600" }
      ]
    }
  ]
}
